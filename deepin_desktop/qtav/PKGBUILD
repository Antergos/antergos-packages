pkgname=qtav
pkgver=2.0.20150424100711
_srcdirname=qtav-2.0+20150424100710
pkgrel=1
pkgdesc="qt multimedia framework"
arch=('i686' 'x86_64')
url="https://gitcafe.com/Deepin/QtAV"
license=('GPL')
depends=('qt5-base' 'ffmpeg')
makedepends=('qt5-tools')
_mirror="https://ftp.fau.de/deepin/pool/main"
source=("http://deepin.mirror.gtcomm.net/pool/main/q/qtav/qtav_2.0+20150424100710.tar.gz")
sha256sums=('01a90f08bba21e475bc0a75ba9826b21c85ff239fb445b2dde38a8c71c8ef879')

build(){
  cd "${_srcdirname}"

  qmake
  make PREFIX=/usr
}

package() {
  cd "${_srcdirname}"

  make INSTALL_ROOT="${pkgdir}" install
}
