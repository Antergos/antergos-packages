pkgname=spl
pkgver=0.6.5.5
_pkgver=0.6.5.5
pkgrel=1
pkgdesc="Solaris Porting Layer kernel modules."
license=('GPL')
makedepends=("git")
depends=("dkms" "spl-utils" "linux-headers")
provides=("spl-dkms")
conflicts=("spl-git" "spl-lts" "spl-dkms")
install=spl.install
arch=("i686" "x86_64")
url="http://zfsonlinux.org/"
source=("https://github.com/zfsonlinux/zfs/releases/download/zfs-${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha256sums=('c5d909000d34de20743cca5959a12d21ea4bcd545c0dfd90df7935f138570e1e')
install=spl.install

_kernel='4.4.5-1-ARCH'

#pkgver() {
#    cd "${srcdir}/${pkgname}-${pkgver}"
#    printf "%s.r%s_%s" "${_pkgver}" "$(git rev-list --count HEAD)" "${_kernel/-2-ARCH}"
#}

build() {
    sed -i "s|<PKGVER>|${_pkgver}|g" "${startdir}/${pkgname}.install"
    sed -i "s|<KERNVER>|${_kernel}|g" "${startdir}/${pkgname}.install"

    cd "${srcdir}/${pkgname}-${pkgver}"
    ./autogen.sh
    
    _at_enable=""
    [ "${CARCH}" == "i686"  ] && _at_enable="--enable-atomic-spinlocks"

    ./configure --prefix=/usr \
                --libdir=/usr/lib \
                --sbindir=/usr/bin \
                --with-config=user \
                ${_at_enable}

    make
}

package() {
    dkmsdir="${pkgdir}/usr/src/${pkgname}-${_pkgver}"
    install -d "${dkmsdir}"

    cd "${srcdir}"
    tar -xzf "${pkgname}-${pkgver}.tar.gz" -C "${dkmsdir}" --strip-components 1

    cd "${dkmsdir}"
    ./autogen.sh
    scripts/dkms.mkconf -v ${_pkgver} -f dkms.conf -n ${pkgname}
    chmod g-w,o-w -R .
}

# -*- mode: bash;-*-
