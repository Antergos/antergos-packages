pkgname=deepin-cursor-theme
pkgver=2014.4.2
_pkgver=2014~4-2
pkgrel=1
pkgdesc='Cursor theme from Linux Deepin'
arch=('any')
license=('LGPL3')
url="http://www.linuxdeepin.com/"
groups=('deepin')
source=("http://packages.linuxdeepin.com/deepin/pool/main/d/deepin-cursor-theme/deepin-cursor-theme_2014~4-2.tar.gz")
sha256sums=('8e1f395f784771d09858d016eb539e7027d1ccb5132841a7cd54f038943f67c0')

package() {
  cd "${pkgname}-${_pkgver}"

  mkdir -p "${pkgdir}"/usr/share/icons
  cp -R Deepin-Cursor "${pkgdir}"/usr/share/icons/
}
